using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp5
{
    // 1.1. Класс Student
    class Student
    {
        public string name; 
    }

    // 1.2. Класс Car
    class Car
    {
        public int year; 
    }

    // 1.3. Класс Point
    class Point
    {
        public int x; 
    }

    // 1.4. Класс Person
    class Person
    {
        public int age; 

        public void Print()
        {
            Console.WriteLine($"Возраст: {age}");
        }
    }

    // 1.5. Класс Table
    class Table
    {
        public int rows; 
        public int cols; 

        public void Display()
        {
            Console.WriteLine($"Строки: {rows}, Столбцы: {cols}");
        }
    }

    // 1.6. Класс Manager
    class Manager
    {
        private int age; 
        private string name; 

        public Manager(int age, string name)
        {
            this.age = age;
            this.name = name;
        }

        public int GetAge()
        {
            return age;
        }

        public string GetName()
        {
            return name;
        }
    }

    // 1.7. Класс Point3D
    class Point3D
    {
        public int x; 
        public int y; 
        public int z; 

        public void Show()
        {
            Console.WriteLine($"Point3D: X={x}, Y={y}, Z={z}");
        }
    }

    // 1.8. Класс Shop
    class Shop
    {
        private string name; 

        public Shop(string name)
        {
            this.name = name;
        }

        public string GetName()
        {
            return name;
        }

        public void SetName(string newName)
        {
            name = newName;
        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("=== Демонстрация работы всех классов ===\n");

            // 2.1. Student
            Console.WriteLine("1. Класс Student:");
            Student student = new Student();
            student.name = "Ваган Арменович";
            Console.WriteLine($"Имя студента: {student.name}\n");

            // 2.2. Car
            Console.WriteLine("2. Класс Car:");
            Car car = new Car();
            car.year = 2026;
            Console.WriteLine($"Год выпуска автомобиля: {car.year}\n");

            // 2.3. Point
            Console.WriteLine("3. Класс Point:");
            Point point = new Point();
            point.x = 10;
            Console.WriteLine($"Координата X точки: {point.x}\n");

            // 2.4. Person
            Console.WriteLine("4. Класс Person:");
            Person person = new Person();
            person.age = 19;
            Console.Write("Возраст персоны: ");
            person.Print();
            Console.WriteLine();

            // 2.5. Table
            Console.WriteLine("5. Класс Table:");
            Table table = new Table();
            table.rows = 5;
            table.cols = 3;
            Console.Write("Параметры таблицы: ");
            table.Display();
            Console.WriteLine();

            // 2.6. Manager
            Console.WriteLine("6. Класс Manager:");
            Manager manager = new Manager(19, "Ваган Айвазян");
            Console.WriteLine($"Менеджер: {manager.GetName()}");
            Console.WriteLine($"Возраст менеджера: {manager.GetAge()}\n");

            // 2.7. Point3D
            Console.WriteLine("7. Класс Point3D:");
            Point3D point3d = new Point3D();
            point3d.x = 1;
            point3d.y = 2;
            point3d.z = 3;
            Console.Write("Координаты 3D точки: ");
            point3d.Show();
            Console.WriteLine();

            // 2.8. Shop
            Console.WriteLine("8. Класс Shop:");
            Shop shop = new Shop("Продуктовый магазин");
            Console.WriteLine($"Название магазина: {shop.GetName()}");
            shop.SetName("Супермаркет 'Окей'");
            Console.WriteLine($"Новое название магазина: {shop.GetName()}\n");

            Console.WriteLine("Нажмите любую клавишу для выхода...");
            Console.ReadKey();
        }
    }
}


//3

namespace ConsoleApp12
{
    internal class Program
    {
        static void Main(string[] args)
        { 
            class Student
        {
            public string Name { get; set; }
        }
         }

        // 3.2
        class Child
        {
            public int Age { get; set; }

            public Child() { }
        }

        // 3.3 
        class CarYear
        {
            private int year;

            public int Year
            {
                get { return year; }
                set
                {
                    if (value > 0)
                        year = value;
                }
            }

            public CarYear() { }
        }

        // 3.4 
        class Car
        {
            public string Name { get; set; }
            public string Color { get; set; }

            public Car() { }
        }

        // 3.5
        class Product
        {
            protected string name;

            public string Name
            {
                get { return name; }
            }

            public Product()
            {
                name = "Ваган";
            }
//4.1
class Person
{
public string Name { get; set; }
}

class Student : Person
{
public int Course { get; set; }
}
// 4.2
class Animal
{
public string Name { get; set; }
}

class Cat : Animal
{
public void Meow()
{
Console.WriteLine("Meow");
}
}

class Dog : Animal
{
public void Bark()
{
Console.WriteLine("Woof");
}
}
// 4.3
class Entity
{
public int Id { get; set; }
}

class Product : Entity
{
public string Name { get; set; }
}
// 4.4
class Dishes
{
public string Material { get; set; }
}

class Cup : Dishes
{
public int Volume { get; set; }
}
// 4.5
class EntityBase
{
public int Id { get; set; }
}

class Staff : EntityBase
{
public string Position { get; set; }
}

class Manager : Staff
{
public string Department { get; set; }
}
// 4.6
class AnimalBase
{
protected int age;
}

class Predator : AnimalBase
{
public void SetAge(int value)
{
age = value;
}

public void ShowAge()
{
Console.WriteLine(age);
}
}

// 4.7
class Transport
{
private string name;

public string Name
{
get { return name; }
set { name = value; }
}
}

class SpaceShuttle : Transport
{
public void Show()
{
Console.WriteLine(Name);
}
}
// 5.1
class Strategy
{
public virtual void Display()
{
Console.WriteLine("Strategy");
}
}
// 5.2
class Weather
{
public virtual void Show()
{
Console.WriteLine("My Weather");
}
}
// 5.3
class StrategyBase
{
public virtual void Display()
{
Console.WriteLine("Strategy");
}
}

class ConservativeStrategy : StrategyBase
{
public override void Display()
{
Console.WriteLine("Conservative Strategy");
}
}


// 5.4
class Animal
{
private string type;

public Animal()
{
type = "My Type";
}

public virtual void Print()
{
Console.WriteLine(type);
}
}

class Cat : Animal
{
private int age;

public Cat()
{
age = 5;
}

public override void Print()
{
Console.WriteLine(age);
}
}
// 5.5
abstract class Entity
{
public abstract void Display();
}

// 5.6
abstract class EntityBase
{
public abstract void Display();
}

class Product : EntityBase
{
public override void Display()
{
Console.WriteLine("My Product");
}
}
// 5.7
interface IPrintable
{
void Display();
}

class ConsolePrinting : IPrintable
{
public void Display()
{
Console.WriteLine("My Console");
}
}
