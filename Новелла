using System;

namespace ConsoleApp12
{
{
// 1.1 Student
class Student
{
public string name;
}

// 1.2 Car
class Car
{
public int year;
}

// 1.3 Point
class Point
{
public int x;
}

// 1.4 Person
class Person
{
private int age;

public Person(int age)
{
this.age = age;
}

public void Print()
{
Console.WriteLine($"Age: {age}");
}
}

// 1.5 Table
class Table
{
private int rows;
private int cols;

public Table(int rows, int cols)
{
this.rows = rows;
this.cols = cols;
}

public void Display()
{
Console.WriteLine($"Rows: {rows}, Cols: {cols}");
}
}

// 1.6 Manager
class Manager
{
private int age;
private string name;

public Manager(int age, string name)
{
this.age = age;
this.name = name;
}

public int GetAge()
{
return age;
}

public string GetName()
{
return name;
}
}

// 1.7 Point3D
class Point3D
{
private int x, y, z;

public Point3D(int x, int y, int z)
{
this.x = x;
this.y = y;
this.z = z;
}

public void Show()
{
Console.WriteLine($"X: {x}, Y: {y}, Z: {z}");
}
}

// 1.8 Shop (в задании опечатка Shor)
class Shop
{
private string name;

public Shop(string name)
{
this.name = name;
}

public string GetName()
{
return name;
}

public void SetName(string newName)
{
name = newName;
}
}

class Program
{
static void Main(string[] args)
{
Student s = new Student { name = "Vagan" };
Car car = new Car { year = 2006 };
Point p = new Point { x = 5 };

Person person = new Person(20);
person.Print();

Table table = new Table(3, 4);
table.Display();

Manager manager = new Manager(40, "Alex");
Console.WriteLine($"Manager: {manager.GetName()}, Age: {manager.GetAge()}");

Point3D point3D = new Point3D(1, 2, 3);
point3D.Show();

Shop shop = new Shop("My Shop");
Console.WriteLine(shop.GetName());
shop.SetName("New Shop");
Console.WriteLine(shop.GetName());
}
}
}
